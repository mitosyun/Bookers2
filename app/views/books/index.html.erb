<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
    <div class="row">
      <%= render 'list', book: @book,user: current_user %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |books| %>
              <tr>
                <td>
                  <%=link_to(user_path(books.user)) do %>
                    <%= image_tag books.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td>
                  <%= link_to(book_path(books.id)) do %>
                    <%= books.title %>
                  <% end %>
                </td>
                <td><%= books.body %></td>
                <td colspan="3"></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
